<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:stretchColumns="*"
    tools:context="hamedinger.nico.whowantstobeamillionaire.MainActivity">


    <TableRow android:layout_weight="4">

        <Button
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="This Message should not appear, tell me if it does!"
            android:id="@+id/QuestionBtn"
            android:background="@drawable/wwm_color"
            android:textColor="#ffffff"/>

    </TableRow>

    <TableRow android:layout_weight="1">

        <Button android:layout_weight="1" android:layout_height="match_parent"
                android:text="This Message should not appear, tell me if it does!"
                android:id="@+id/answerBtnOne"
                android:background="@drawable/wwm_color"
                android:textColor="#ffffff"
                android:onClick="checkAnswer"/>

        <Button android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="This Message should not appear, tell me if it does!"
                android:id="@+id/answerBtnTwo"
                android:background="@drawable/wwm_color"
                android:textColor="#ffffff"
                android:onClick="checkAnswer"/>
    </TableRow>

    <TableRow android:layout_weight="1">

        <Button android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="This Message should not appear, tell me if it does!"
                android:id="@+id/answerBtnThree"
                android:background="@drawable/wwm_color"
                android:textColor="#ffffff"
                android:onClick="checkAnswer"/>

        <Button android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="This Message should not appear, tell me if it does!"
                android:id="@+id/answerBtnFour"
                android:background="@drawable/wwm_color"
                android:textColor="#ffffff"
                android:onClick="checkAnswer"/>
    </TableRow>



        <Button android:layout_width="wrap_content"
                android:text="50:50"
                android:id="@+id/fiftyBtn"
                android:background="@drawable/wwm_color"
                android:textColor="#ffffff"
                android:onClick="fiftyActivated"/>

        <Button android:layout_width="wrap_content"
                android:text="Zweite Chance"
                android:id="@+id/secondCBtn"
                android:background="@drawable/wwm_color"
                android:textColor="#ffffff"
                android:onClick="SecondChanceActivated"/>

        <Button android:layout_width="wrap_content"
                android:text="Publikum"
                android:id="@+id/audienceBtn"
                android:background="@drawable/wwm_color"
                android:textColor="#ffffff"
                android:onClick="audienceActivated"/>

</TableLayout>